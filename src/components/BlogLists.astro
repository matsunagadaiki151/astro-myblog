---
import React from "react";
import Article from "./Article.astro";
import type { PostData } from "../types/postData";

type Props = {
  allPostsData: PostData[];
};

const { allPostsData } = Astro.props;
---

<section class="text-xl py-8 pr-8 w-full md:w-3/4">
  <div class="text-2xl md:text-4xl border-b-2 border-giray/50 pb-2 mb-8 md:mb-12">
    <div>記事一覧</div>
  </div>
  <div class="flex flex-col space-y-8 md:space-y-16">
    {allPostsData?.map((content) => (
      <Article content={content}/>
    ))}
  </div>
</section>
